    "start": "node server.js -p $PORT"
  },
  "dependencies": {
    "@mars/heroku-nextjs-build": "^1.0.1",
    "express": "^4.14.0",
    "next": "^2.0.0-beta"
  },
  "engines": {
    "node": "6.9.x"
  },
  "cacheDirectories": [
    "nextjs/node_modules"
  ]
}
